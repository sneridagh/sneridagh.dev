{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "commonjs",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "paths": {
            "@plone/volto/*": [
                "../node_modules/@plone/volto/src/*",
                "../node_modules/@plone/volto/types/*"
            ],
            "@root/*": [
                "."
            ],
            "@kitconcept/volto-code-block": [
                "addons/volto-code-block"
            ],
            "@plonegovbr/volto-code-block": [
                "addons/volto-code-block"
            ],
            "volto-sneridagh-dev": [
                "addons/volto-sneridagh-dev/src"
            ]
        },
        "baseUrl": "src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build",
        "public",
        "coverage",
        "src/**/*.test.{js,jsx,ts,tsx}",
        "src/**/*.spec.{js,jsx,ts,tsx}",
        "src/**/*.stories.{js,jsx,ts,tsx}"
    ]
}